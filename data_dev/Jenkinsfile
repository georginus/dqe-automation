pipeline {
    agent any

    environment {
        POSTGRES_SECRET = credentials('jenkins-postgres-credentials')
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Install system dependencies') {
            steps {
                sh 'apt-get update'
                sh 'apt-get install -y python3 python3-pip libpq-dev'
            }
        }

        stage('Install Python dependencies') {
            steps {
                sh 'pip3 install --upgrade pip'
                sh 'pip3 install -r requirements.txt'
            }
        }

        stage('Run main pipeline (optional)') {
            steps {
                sh 'export PYTHONPATH=$WORKSPACE && python3 data_dev/main.py'
            }
        }

        stage('Run PyTest DQ Framework') {
            steps {
                sh '''
                    pytest tests -m "parquet_data" \
                        --db_host=localhost \
                        --db_port=5432 \
                        --db_name=mydatabase \
                        --db_user=$POSTGRES_SECRET_USR \
                        --db_password=$POSTGRES_SECRET_PSW \
                        --html=html_report/report.html
                '''
            }
        }

        stage('Archive Test Report') {
            steps {
                archiveArtifacts artifacts: 'html_report/**', allowEmptyArchive: true
            }
        }

        stage('Publish HTML Report') {
            steps {
                publishHTML(target: [
                    allowMissing: false,
                    keepAll: true,
                    reportDir: '
html_report',
                    reportFiles: 'report.html',
                    reportName: 'PyTest Data Quality Report'
                ])
            }
        }
    }
    post {
        always {
            echo 'Pipeline execution completed.'
        }
        success {
            echo 'Pipeline executed successfully!'
        }
        failure {
            echo 'Pipeline failed. Check logs for details.'
        }
    }
}